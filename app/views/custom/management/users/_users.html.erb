<p id="notice"><%= notice %></p>

  <h1><%=t("management.unverified_users_list")%></h1>

  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th>Document type</th>
        <th>Document number</th>
        <th>Date of birth</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @user.each do |user| %>
        <tr>
          <td><%= user.username%></td>
          <td><%= user.document_type %></td>
          <td><%= user.document_number %></td>
          <td><%= user.date_of_birth %></td>
          <td><%= link_to t("management.document_verifications.verify"), management_path(user), class: "button success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
